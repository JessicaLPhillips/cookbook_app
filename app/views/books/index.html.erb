<div class="bg-image">
  <h1 class="text-center m-3"><%=current_user.name %>'s Books</h1>
  <a href="books/new" class="btn colors float-right mr-3 bold-f">Create a New Book</a>
  <div>
    <% @books.each do |book| %>
      <div class="card w-75 m-4 p-3 shadow card-colors">
        <div class="card-block">
          <h3 class="card-title">Book Title: <%= book.title %></h3>
          <a class="btn purple-button mr-4 bold-f" href="books/<%=book.id%>"> View This Book </a>
        </div>
      </div>    
    <% end %>
  </div>
</div>

