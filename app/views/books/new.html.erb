<div class="container">
  <h1 class="text-center m-3">Create a New Book</h1>
  <%= simple_form_for @book do |f| %>
    <% if flash[:book_errors] %>
      <ul>
      <% flash[:book_errors].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>
    <div> <%= f.input :title %></div>
    <div><%=f.input :picture, as: :file %></div>
    <div class="form-group">
      <label for="Intro">Introduction</label>
      <textarea class="form-control w-50 m-2 p-2" id="Intro" rows="2" placeholder="Write Your Introduction Here"></textarea>
      <div>
      	<ul class="nav nav-tabs" id="myTab" role="tablist">
      	  <% current_user.groups.each_with_index do |group, index| %>
    	  	  <li class="nav-item">
    	  	  	<a class="nav-link <%= index == 0 ? 'active' : ''%>" id="group-<%= group.id %>-tab" data-toggle="tab" href="#group-<%= group.id %>" role="tab" aria-controls="profile" aria-selected="false"><%= group.name %>'s Recipes</a>
    	  	  </li>
    			<% end %>
      	</ul>
      	<div class="tab-content m-3" id="myTabContent">
      	  <% current_user.groups.each_with_index do |group, index| %>
    			  <div class="tab-pane fade show <%= index == 0 ? 'active' : ''%>" id="group-<%= group.id %>" role="tabpanel" aria-labelledby="group-<%= group.id%>-tab">
    		  		<%= f.association :recipes, collection: group.recipes, as: :check_boxes %>
    			  </div>
    			<% end %>
      	</div>
      </div>
      <button type="submit" class="btn colors ml-5 mt-3">Create Book</button>
    </div>
  <% end %>
</div>
