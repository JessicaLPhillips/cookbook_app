<div class="bg-image">
<h1 class="text-center">Create your Family Group Here</h1>
  <div>
   <%= form_for @group do |form| %>
    <% if flash[:group_errors] %>
      <ul>
      <% flash[:group_errors].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>
  <div class="form-group forms w-50 m-5">
    <label for="Name">Family Name:</label>
    <input type="text" class="form-control form-control-lg" id="exampleInputName" placeholder="Your Family or Group Name" required>
    <div class="invalid-feedback">Name can't be blank</div> 
  </div>  
  <div class="form-group forms w-50 m-5">
    <label for="Location">Family Location:</label>
    <input type="text" class="form-control form-control-lg" id="exampleInputLocation" placeholder="Your Family or Group Location" required>
    <div class="invalid-feedback">Location can't be blank</div>
    </div>
  </div>
  <button type="submit" class="btn purple-button ml-5 mt-3">Create Group</button>
  <% end %>
</div>


 