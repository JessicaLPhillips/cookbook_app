<div class= "bg-image">
<h1 class="pt-3 text-center">Family Name: <%= @group.name%></h1>
<h1 class="pt-3 text-center">Location: <%= @group.location%></h1>
<h2 class="bold-f"> Family Members: 
	<% @group.users.each do |user|%>
	<h3> 
		<%= user.name%>
	</h3>
	<% end %>
</h2>
<h2 class="bold-f"> Recipes In This Family:</h2>
<% @group.recipes.each do |recipe|%>
<h3>
<%= link_to recipe.name, recipe_path(recipe) %>
</h3>
<% end %>
</div>