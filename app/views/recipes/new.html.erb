<h1 class="text-center m-3">Create a New Recipe</h1>
<div>
  <%= simple_form_for @recipe do |f| %>
    <% if flash[:recipe_errors] %>
      <ul>
      <% flash[:recipe_errors].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  <% end %>
  <div class="form-group">
    <div><%=f.input :picture, as: :file %></div>
    <div class=""> <%= f.input :name %></div>
    <div class=""><%= f.input :description %></div>
    <div class="select"><%=f.input :category, as: :select,
     collection: ["Appetizers", "Soups & Salads", "Main Courses", "Breads", "Desserts"] %></div>
  </div>   
  <h4>Ingredients</h4>
  <div>
    <%= f.simple_fields_for :ingredients do |ingredient| %>
      <%= render 'ingredient_fields', :f => ingredient %>
    <% end %>
    <div>
      <%= link_to_add_association 'Click to Add Ingredient', f, :ingredients %>
    </div>
  </div>
  <div class="form-group">
    <%= f.input :instructions, as: :text %> 
  </div>
  	<div class=""><%= f.button :submit %></div>
  <% end %>
</div>

  
<div class="form-label-group">
    <input type="email" class="form-control" id="exampleInputEmail" placeholder="Enter email" autocomplete="email" required>
    <label for="exampleInputEmail">Email address</label>
    <div class="invalid-feedback">Email can't be blank</div>
    <div class="valid-feedback">Looks good!</div>
    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>